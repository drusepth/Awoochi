<h1>Listing sites</h1>

<table>
  <tr>
    <th>Account</th>
    <th>Name</th>
    <th>Url</th>
    <th>Api token</th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%=h site.account_id %></td>
    <td><%=h site.name %></td>
    <td><%=h site.url %></td>
    <td><%=h site.api_token %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New site', new_site_path %>